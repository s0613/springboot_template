# ============================================================================
# Template App Environment Configuration
# Copy this file to .env and update with your actual values
# ============================================================================

# Spring Profile
SPRING_PROFILES_ACTIVE=local

# Server
SERVER_PORT=8080

# Database (PostgreSQL)
DATABASE_URL=jdbc:postgresql://localhost:5432/template_db
DATABASE_USERNAME=template_user
DATABASE_PASSWORD=template_pass

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
# IMPORTANT: Generate a secure secret for production!
# Use: openssl rand -base64 32
JWT_SECRET=your-256-bit-secret-key-here-must-be-at-least-32-characters
JWT_ACCESS_EXPIRATION=3600000
JWT_REFRESH_EXPIRATION=604800000

# AWS Configuration
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY=
AWS_SECRET_KEY=

# AWS S3
AWS_S3_ENABLED=false
AWS_S3_BUCKET=

# AWS SES (Email)
AWS_SES_ENABLED=false
AWS_SES_FROM_EMAIL=noreply@example.com
AWS_SES_FROM_NAME=Template App

# AWS SNS (Push Notifications)
AWS_SNS_ENABLED=false
AWS_SNS_ANDROID_ARN=
AWS_SNS_IOS_ARN=

# NCP (Naver Cloud Platform) SMS
NCP_SMS_ENABLED=false
NCP_ACCESS_KEY=
NCP_SECRET_KEY=
NCP_SMS_SERVICE_ID=
NCP_SMS_SENDER_PHONE=

# OAuth2 - Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# OAuth2 - Kakao
KAKAO_CLIENT_ID=
KAKAO_CLIENT_SECRET=

# OAuth2 - Apple
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=

# Payment Gateway (e.g., Toss Payments)
PAYMENT_PG_CLIENT_KEY=
PAYMENT_PG_SECRET_KEY=
PAYMENT_SUCCESS_URL=
PAYMENT_FAIL_URL=

# Feature Flags
RATE_LIMIT_ENABLED=true
NOTIFICATION_DLQ_ENABLED=false
SCHEDULING_ENABLED=true

# Logging
LOG_LEVEL=DEBUG
